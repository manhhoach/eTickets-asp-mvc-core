@{
    ViewData["Title"] = "Cinemas";
}
@model IEnumerable<Cinema>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model=>model.Logo)</th>
                    <th>@Html.DisplayNameFor(model=>model.Name)</th>
                    <th>@Html.DisplayNameFor(model=>model.Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="" src="@item.Logo" alt="@item.Logo" style="max-width:150px" />
                        </td>
                        <td class="align-middle">@Html.DisplayFor(m=>item.Name)</td>
                        <td class="align-middle">
                            @*  @Html.DisplayFor(m=>item.Bio) *@
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-info" asp-action="Details" asp-controller="Cinema" asp-route-id="@item.Id">
                                <i class="bi bi-eye"></i>
                                Details
                            </a>
                            <a class="btn btn-primary" asp-action="Edit" asp-controller="Cinema" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square "></i>
                                Edit
                            </a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-controller="Cinema" asp-route-id="@item.Id">
                                <i class="bi bi-trash"></i>
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
<div class="text-white">
    <a asp-controller="Cinema" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle">Add new</i>
    </a>
</div>