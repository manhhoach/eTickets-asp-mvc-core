@model Producer
@{
    ViewData["Title"] = "Edit a Producer";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>
                Edit a Producer
            </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="AvatarPreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Avatar" class="control-label"></label>
                        <input asp-for="Avatar" class="form-control" value="@Model.Avatar" />
                        <span asp-validation-for="Avatar" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" value="@Model.FullName" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" value="@Model.Bio" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Edit">Edit</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = this.getElementById('AvatarPreview');
            output.src = $('#Avatar').val();

        })
        $('#Avatar').on('change', function () {
            var output = document.getElementById('AvatarPreview');
            output.src = $(this).val();
        })

    </script>
}